{
    "name": "weave",
    "version": "0.3.4",
    "description": "",
    "main": "index.ts",
    "scripts": {
        "test": "jest",
        "start": "ts-node src/index.ts",
        "dev": "nodemon | bunyan -o short",
        "build": "npm run clean && tsc",
        "start-prod": "npm run do-load-revisions && node dist/index.js",
        "prepare": "husky install",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx --ignore-pattern dist/",
        "lint-fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --ignore-pattern dist/",
        "format": "prettier --write '**/*.{js,jsx,ts,tsx}' --ignore-path .eslintignore",
        "compose": "docker-compose up -d",
        "decompose": "docker-compose down",
        "type-check": "tsc --noEmit --skipLibCheck",
        "check": "npm run type-check && npm run lint-fix",
        "do-dump-data": "ts-node src/models/dump-data.ts",
        "dump-data": "npm run do-dump-data | bunyan -o short",
        "preinstall": "echo \"@jorgenswiderski:registry=https://npm.pkg.github.com/\n//npm.pkg.github.com/:_authToken=${GHP_TOKEN}\" > .npmrc",
        "link": "npm i @jorgenswiderski/tomekeeper-shared@latest && npm link @jorgenswiderski/tomekeeper-shared",
        "do-load-revisions": "ts-node src/models/revision-lock/load-revisions.ts",
        "load-revisions": "npm run do-load-revisions | bunyan -o short",
        "update-revisions": "ts-node src/models/revision-lock/update-revisions.ts",
        "load-revisions-dry-run": "ts-node src/models/revision-lock/load-revisions.ts --dry-run",
        "clean": "rimraf ./dist"
    },
    "keywords": [],
    "author": "Jorgen Swiderski",
    "license": "MIT",
    "dependencies": {
        "@fastify/cors": "^8.4.2",
        "@fastify/response-validation": "^2.5.1",
        "@fastify/static": "^6.12.0",
        "@jorgenswiderski/tomekeeper-shared": "^1.0.26",
        "bunyan": "^1.8.15",
        "bunyan-rotating-file-stream": "^2.0.5",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "fastify": "^4.24.3",
        "fastify-plugin": "^4.5.1",
        "mongodb": "^6.1.0",
        "mwn": "^2.0.1",
        "newrelic": "^11.5.0",
        "uuid": "^9.0.1",
        "write-file-atomic": "^5.0.1"
    },
    "devDependencies": {
        "@types/bunyan": "^1.8.10",
        "@types/cors": "^2.8.14",
        "@types/jest": "^29.5.5",
        "@types/newrelic": "^9.14.2",
        "@types/node": "^20.8.2",
        "@types/uuid": "^9.0.6",
        "@types/write-file-atomic": "^4.0.2",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "eslint": "^8.50.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^8.0.0",
        "jest": "^29.7.0",
        "lint-staged": "^14.0.1",
        "nodemon": "^3.0.2",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    }
}
